---
import "../styles/global.css";
import "@fontsource/onest/400.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
  dict: any;
  lang: string;
}

const { title, description, dict, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="fixed inset-0 z-[-2] min-h-full w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"
    >
    </div>
    <Header lang={lang as "es" | "en"} dict={dict} />
    <slot />
    <Footer dict={dict} />
    <!-- Flowbite JS: usar CDN para inicializar data-attributes en el navegador -->
    <script
      src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
    ></script>
    <script type="module">
      import("../client/header");
    </script>
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family:
      "Onest",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    background: #050505;
    color: white;
    flex-direction: column;
    min-height: 100vh;
  }

  @media (prefers-reduce-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
