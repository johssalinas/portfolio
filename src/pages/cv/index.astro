---
import { getDict } from "../../i18n/i18n";
import CV from "../../components/CV/CV.astro";

// Determinar lenguaje básico por path; la implementación existente usa /es/ y /en/
const urlPath = Astro.url?.pathname ?? "/es/";
const lang = urlPath.includes("/en") ? "en" : "es";
const dict = getDict(lang as any);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{dict.cv.name} - CV</title>
  </head>
  <body>
    <CV lang={lang} />
  </body>
</html>
