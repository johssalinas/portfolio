---
import Badge from "./Badge.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkedinIcon from "./icons/Linkedin.astro";
import SocialPill from "./icons/SocialPill.astro";
import Mail from "./icons/Mail.astro";

interface Props {
  dict: any;
}
const { dict } = Astro.props;
---

<>
  <!-- Foto de perfil con diseÃ±o moderno -->
  <div class="relative mb-8 flex justify-center">
    <div class="relative group">
      <!-- Anillos animados de fondo -->
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 opacity-75 blur-xl group-hover:opacity-100 transition duration-500 animate-pulse"
      >
      </div>
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 to-purple-600 opacity-50 blur-lg animate-spin-slow"
      >
      </div>

      <!-- Container de la imagen -->
      <div class="relative">
        <img
          class="relative rounded-full w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 object-cover border-4 border-white/20 shadow-2xl group-hover:scale-105 transition-transform duration-300"
          src="/logo_johs.jpeg"
          alt="Foto de Johs Salinas - Desarrollador Fullstack"
        />

        <!-- Efecto de brillo -->
        <div
          class="absolute inset-0 rounded-full bg-gradient-to-tr from-transparent via-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </div>
    </div>
  </div>

  <h1
    class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-3 items-center justify-center pb-3 sm:pb-4 lg:pb-6 text-center flex-wrap"
  >
    Hey, Soy Johs <a
      href="https://www.linkedin.com/in/johssalinas"
      target="_blank"
      rel="noopener noreferrer"
      class="flex justify-center items-center"
    >
      <Badge>{dict.about.available}</Badge>
    </a>
  </h1>
  <h2
    class="text-base sm:text-lg md:text-xl lg:text-2xl opacity-80 prose prose-invert text-pretty max-w-[700px] mx-auto text-center"
  >
    {dict.about.paragraph}
  </h2>

  <nav class="flex gap-3 py-4 flex-wrap justify-center">
    <SocialPill href="https://www.linkedin.com/in/johssalinas">
      <LinkedinIcon class="size-4 md:size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/johssalinas">
      <GitHubIcon class="size-4 md:size-6" />
      GitHub
    </SocialPill>
    <SocialPill href="mailto:johsssalinas2work@gmail.com">
      <Mail class="size-4 md:size-6" />
      johssalinas2work@gmail.com
    </SocialPill>
  </nav>
</>
