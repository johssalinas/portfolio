---
import type { Lang } from "../../i18n/i18n";
import { getDict } from "../../i18n/i18n";
import Contact from "./Contact.astro";
import ExperienceItem from "./ExperienceItem.astro";
import EducationItem from "./EducationItem.astro";
const { lang = "es" } = Astro.props as { lang?: Lang };
const dict = getDict(lang as Lang).cv as any;
---

<div class="cv-container">
  <h1>{dict.name}</h1>
  <Contact contact={dict.contact} />
  <div class="resumen">{dict.summary}</div>

  <div class="section-title">{dict.sections.experience}</div>
  {dict.experiences.map((item: any) => <ExperienceItem item={item} />)}

  <div class="section-title">{dict.sections.education}</div>
  {dict.education.map((ed: any) => <EducationItem ed={ed} />)}
</div>

<style>
  .cv-container {
    max-width: 800px;
    background: #fff;
    padding: 2cm;
    margin: 20px auto;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    font-family: "Times New Roman", Times, serif;
    color: #000;
  }
  h1 {
    text-align: center;
    font-size: 28pt;
    font-weight: bold;
    margin-bottom: 6pt;
  }
  .resumen {
    text-align: justify;
    margin-bottom: 14pt;
  }
  .section-title {
    font-size: 12pt;
    font-weight: bold;
    text-transform: uppercase;
    border-bottom: 1px solid #000;
    margin-top: 18pt;
    margin-bottom: 8pt;
  }
  @media print {
    .cv-container {
      box-shadow: none;
      max-width: 100%;
      padding: 1cm;
    }
  }
</style>
