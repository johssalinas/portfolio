---
const { contact } = Astro.props as { contact: any[] };
---

<div class="contacto-inline">
  {
    contact.map((item, idx) => (
      <>
        <a href={item.link} target="_blank" rel="noopener noreferrer">
          {item.name}
        </a>
        {idx < contact.length - 1 && <span> Â· </span>}
      </>
    ))
  }
</div>

<style>
  .contacto-inline {
    text-align: center;
    font-size: 12pt;
    margin-bottom: 16pt;
  }
</style>
