---
import ExperienceItem from "./ExperienceItem.astro";

interface ExperienceData {
  company: string;
  role: string;
  period: string;
  location: string;
  type: string;
  description: string;
  achievements: string[];
  keyMetrics: {
    [key: string]: string;
  };
  skills: string[];
  isLatest?: boolean;
}

interface Props {
  dict: any;
}
const { dict } = Astro.props;

const EXPERIENCE: ExperienceData[] = dict.experience?.items || [];
---

<section class="max-w-4xl mx-auto">
  <div class="relative">
    <!-- Timeline line -->
    <div
      class="absolute left-4 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-400 via-blue-500 to-blue-600"
    >
    </div>

    <ol class="relative space-y-8 ml-8">
      {
        EXPERIENCE.map((experience: ExperienceData) => (
          <li class="relative">
            <ExperienceItem {...experience} />
          </li>
        ))
      }
    </ol>
  </div>
</section>
